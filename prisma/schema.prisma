generator client {
  provider = "prisma-client"
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // Connection URL is no longer supported in schema.prisma; move database connection settings to prisma.config.ts
  // and pass `adapter` for a direct DB connection or `accelerateUrl` for Accelerate to the PrismaClient constructor.
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Float
  available Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([available])
}
